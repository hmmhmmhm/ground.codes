{
  "name": "ground-codes",
  "version": "0.0.1",
  "description": "Ground codes",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsup --config tsup.config.ts --watch",
    "build": "node ./scripts/copy-assets.js && tsup --config tsup.config.ts",
    "publish": "turbo run build lint test && changeset version && changeset publish"
  },
  "files": [
    "dist",
    "codebook-dist",
    "region-dist"
  ],
  "tasks": {
    "build": {
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@repo/typescript-config": "workspace:*",
    "tsup": "^8.4.0"
  },
  "dependencies": {}
}
